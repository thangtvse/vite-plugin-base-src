{
  "name": "vite-plugin-base-src",
  "version": "1.0.0",
  "description": "A vite plugin for allowing absolute imports inside src folder",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest --watchAll",
    "test:cov": "jest --coverage",
    "build": "rollup -c",
    "publish": "npm run build && npm run publish"
  },
  "keywords": ["vite", "plugin", "base", "src", "source"],
  "author": "uendno",
  "license": "MIT",
  "devDependencies": {
    "@swc/jest": "^0.2.22",
    "@types/jest": "^29.0.3",
    "@types/node": "^18.7.18",
    "jest": "^29.0.3",
    "jest-watch-typeahead": "^2.2.0",
    "tslib": "^2.4.0"
  },
  "dependencies": {
    "@rollup/plugin-typescript": "^8.5.0",
    "rollup": "^2.79.0",
    "rollup-plugin-node-externals": "^5.0.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "coverageDirectory": "jest-coverage",
    "coverageReporters": [
      "text"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!src/**/*.d.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{spec,test}.{js,ts}"
    ],
    "transform": {
      "^.+\\.(js|ts)$": "@swc/jest"
    },
    "modulePaths": [
      "<rootDir>/src"
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ],
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "reporters": [
      "default"
    ]
  },
  "files": [
    "dist"
  ]
}
